<NodeLabel>:
    text_size: (0.9*self.width, None)
    height: self.texture_size[1] if self.texture_size[1] > 60 else 60
    markup: True
    no_selection: True

<NodesScreen>:
    tree_view: tree_view
    ScrollView:
        effect_cls:ScrollEffect
        do_scroll_x:False
        size_hint:(None,None)
        size:(720,1280)
        GridLayout:
            id:grid_n
            size_hint:(1,None)
            height:self.minimum_height
            spacing:(0,20)
            cols:1
            row_force_default:False
            BoxLayout:
                id:top_box_n
                size_hint_y:None
                height:80
                orientation:'horizontal'
                FlatButton:
                    id:y_button
                    background_normal: grey
                    background_down: light_orange
                    size_hint_x:0.85
                    text:"Aneska"
                FlatButton:
                    id:z_button
                    background_normal: grey
                    background_down: light_orange
                    size_hint_x:0.15
                    text:"Browser"
                    on_release: root.open_main_screen()
            TreeView:
                id:tree_view
                size_hint:(1,None)
                height:self.minimum_height
                root_options:dict(text="Discovery results")

<TabbedPanelContentGrid>:
    size_hint:(1,None)
    rows:1
    height:self.minimum_height
    row_force_default:False
    padding: 3
    canvas:
        Color:
            rgba: self.parent.background_color if self.parent else (1, 1, 1, 1)
        BorderImage:
            border: self.parent.border if self.parent else (16, 16, 16, 16)
            texture: root.parent._bk_img.texture if root.parent else None
            size: self.size
            pos: self.pos

<MethodPanel>:
    id:method_panel
    do_default_tab: False
    size_hint:(1,None)
    tab_height:60
    tab_width: 180
    row_force_default:False
    accept_field: accept_field
    observe_field: observe_field
    content_format_put_field: content_format_put_field
    put_payload_box: put_payload_box
    content_format_post_field: content_format_post_field
    post_payload_box: post_payload_box
    TabbedPanelItem:
        text: "GET"
        on_release: root.controller.set_active_method("GET")
        GridLayout:
            size_hint:(1,None)
            height:self.minimum_height
            cols:1
            row_force_default:False
            BoxLayout:
                size_hint:(1,None)
                height: 60
                Label:
                    text:"Accept option:"
                Spinner:
                    id:accept_field
                    text: "none"
                    values: root.accept_field_values
            BoxLayout:
                size_hint:(1,None)
                height: 60
                Label:
                    text:"Observe option:"
                CheckBox:
                    id:observe_field
                    active: False
    TabbedPanelItem:
        text: "PUT"
        on_release: root.controller.set_active_method('PUT')
        GridLayout:
            size_hint:(1,None)
            height:self.minimum_height
            cols:1
            row_force_default:False
            BoxLayout:
                size_hint:(1,None)
                height: 60
                Label:
                    text:"Content format option:"
                Spinner:
                    id:content_format_put_field
                    text: "none"
                    values: root.accept_field_values
            TextInput:
                id: put_payload_box
                height: 120
                size_hint:(1,None)
                multiline:True
                hint_text: "Enter PUT message payload"
                text: "Poland can into space! Poland must into space! Poland will into space!"
    TabbedPanelItem:
        text: "POST"
        on_release: root.controller.set_active_method('POST')
        GridLayout:
            size_hint:(1,None)
            height:self.minimum_height
            cols:1
            row_force_default:False
            BoxLayout:
                size_hint:(1,None)
                height: 60
                Label:
                    text:"Content format option:"
                Spinner:
                    id:content_format_post_field
                    text: "none"
                    values: root.accept_field_values
            TextInput:
                id: post_payload_box
                height: 120
                size_hint:(1,None)
                multiline:True
                hint_text: "Enter POST message payload"
    TabbedPanelItem:
        text: "DELETE"
        on_release: root.controller.set_active_method('DELETE')
        Label:
            size_hint:(1,None)
            height: 40
            text: "No additional options"


#Style definition below is modified from kivy/data/style.kv
#It is a definition of a simple, flat rectangular button with no image
<-FlatButton>:
    canvas:
        Color:
            rgba: self.background_normal if self.state == 'normal' else self.background_down
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: self.color
        Rectangle:
            texture: self.texture
            size: self.texture_size
            pos: int(self.center_x - self.texture_size[0] / 2.), int(self.center_y - self.texture_size[1] / 2.)
    canvas.after:
        Color:
            rgba: .5, .5, .5, .2
        Line:
            points: [self.parent.x, self.y, self.parent.right, self.y] if self.parent else []

<ResponseCard>:
    height:160
    cols:1
    size_hint:(1,None)
    height:self.minimum_height
    response_payload: response_payload
    target_uri: target_uri
    response_code: response_code
    message_type: message_type
    option_list: option_list
    GridLayout:
        cols:1
        size_hint:(1,None)
        row_default_height:40
        height:self.minimum_height
        padding:5,5
        row_force_default:False
        FlatButton:
            id:target_uri
            size_hint:(1,None)
            text:"GET"
            size:self.texture_size
            text_size: (0.9*self.width, None)
            background_normal: grey
            background_down: light_orange
        FlatButton:
            id: message_type
            size_hint:(1,None)
            text: ""
            size:self.texture_size
            text_size: (0.9*self.width, None)
            markup: True
            background_normal: grey
            background_down: light_orange
        FlatButton:
            id:option_list
            size_hint:(1,None)
            text:"Options: "
            size:self.texture_size
            text_size: (0.9*self.width, None)
            markup: True
            background_normal: grey
            background_down: light_orange
        FlatButton:
            id:response_code
            size_hint:(1,None)
            text:"Code: "
            size:self.texture_size
            text_size: (0.9*self.width, None)
            markup: True
            background_normal: grey
            background_down: light_orange
        FlatButton:
            id:response_payload
            size_hint:(1,None)
            text:"Waiting for response..."
            size:self.texture_size
            markup: True
            text_size: (0.9*self.width, None)
            background_normal: grey
            background_down: light_orange
            on_release: root.open_message_popup()

